{% extends "layouts/base.twig" %}

{% block title %}CAMERA{% endblock %}
{% block head %}
<script type="text/javascript" src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
<link rel="stylesheet" type="text/css" href="/bicentennial-camera/stylesheets/camera.css" />
{% endblock %}

{% block main %}
<div class="camera" style="height: 100%">
    <img class="overlay-photo" src="{{ photo.image_href }}/full/full/0/default.jpg" />
    <video id="video-still"></video>
    <img id="photo" alt="The screen capture will appear in this box." class="invisible">
    <br clear="both" />
</div>
<div class="toolbar">
    <button id="startbutton">Take Photo</button>
</div>
<div class="toolbar hidden">
    <button id="retake-photo">Retake</button>
    <button id="save-photo">Save Photo</button>
</div>
<canvas id="canvas"></canvas>

<br clear="both" />
<form class="xhidden">
    <textarea name="description" style="width: 100vw" rows="10"></textarea>
</form>

<script type="text/javascript" src="/bicentennial-camera/javascripts/camera.js"></script>

{% endblock %}
